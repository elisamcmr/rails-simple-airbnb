<%= simple_form_for(flat) do |f| %>
  <div class="card shadow border-0 rounded-lg p-4">
    <h2 class="fw-bold mb-4" style="color: #333;">Register a New Flat</h2>

    <div class="mb-3">
      <%= f.input :name, input_html: { class: 'form-control shadow-sm rounded' } %>
    </div>

    <div class="mb-3">
      <%= f.input :address, input_html: { class: 'form-control shadow-sm rounded' } %>
    </div>

    <div class="mb-3">
      <%= f.input :description, input_html: { class: 'form-control shadow-sm rounded' } %>
    </div>

    <div class="mb-3">
      <%= f.input :number_of_guests, input_html: { class: 'form-control shadow-sm rounded' } %>
    </div>

    <div class="mb-3">
      <%= f.input :price_per_night, input_html: { class: 'form-control shadow-sm rounded' } %>
    </div>

    <div class="d-flex justify-content-end mt-4">
      <%= f.submit 'Submit', class: 'btn shadow-sm rounded-pill px-4', style: 'background-color: #FF385C; color: white;' %>
      <%= link_to "Cancel", flats_path, class: "btn shadow-sm rounded-pill px-4 ms-2", style: "background-color: #6C757D; color: white;" %>
    </div>
  </div>
<% end %>
