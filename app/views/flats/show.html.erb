<!-- Full-width Image Banner -->
<div class="d-flex justify-content-between align-items-center my-4 p-3 bg-white shadow rounded sticky-top" style="top: 0; z-index: 1000;">
  <h1 class="ms-3 fw-bold text-dark">Simple Airbnb</h1>
  <%= link_to "Register a flat", new_flat_path, class: "btn shadow-sm rounded-pill px-4", style: "background-color: #FF385C; color: white;" %>
</div>

<%= image_tag "pexels-nextvoyage-3051551.jpg", class: "w-100 mb-4 img-fluid", alt: "default image", style: "max-height: 400px; object-fit: cover;" %>

<div class="container my-5">
  <div class="card shadow-lg border-0 rounded-lg">
    <div class="card-body p-4">
      <h2 class="card-title fw-bold mb-3" style="font-size: 2rem; color: #333;"><%= @flat.name %></h2>
      <h3 class="card-text fs-4 mb-4" style="font-weight: 600; color: #555;"><%= @flat.description %></h3>

      <div class="mt-4">
        <p class="card-text mb-2" style="font-size: 1rem; color: #666;">
          <strong>Address:</strong> <%= @flat.address %> <br>
          <strong>Number of guests:</strong> <%= @flat.number_of_guests %> <br>
          <strong style="color: #FF385C; font-size: 1.1rem;">Price per night: $<%= @flat.price_per_night %></strong>
        </p>
      </div>

      <div class="mt-4 d-flex gap-3">
        <%= link_to "Edit flat", edit_flat_path(@flat), class: "btn shadow-sm rounded-pill px-4", style: "border: 1px solid #FF385C; color: #FF385C;" %>
        <%= link_to "Delete flat", flat_path(@flat),
                    class: "btn shadow-sm rounded-pill px-4",
                    style: "background-color: #FF385C; color: white;",
                    data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
      </div>
    </div>
  </div>

  <div class="mt-4">
    <%= link_to "Back to all flats", flats_path, class: "btn shadow-sm rounded-pill px-4", style: "background-color: #6C757D; color: white;" %>
  </div>
</div>
